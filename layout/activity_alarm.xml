<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/materialPrimary_pupple50">

    <TextView
        android:id="@+id/alarmView_top"
        android:layout_alignParentTop="true"
        android:text="@string/current"
        android:elevation="6dp"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="6dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_below="@id/alarmView_top"
        android:padding="6dp"
        android:id="@+id/alarmView_title"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/alarmView_title"
        android:padding="6dp"
        android:id="@+id/alarmView_content"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/alarmView_content"
        android:padding="6dp"
        android:id="@+id/alarmView_time"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/alarmView_time"
        android:id="@+id/alarmView_center"
        android:text="@string/next"
        android:elevation="6dp"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="6dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_below="@id/alarmView_center"
        android:padding="6dp"
        android:id="@+id/alarmView_nexttitle"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="6dp"
        android:layout_below="@id/alarmView_nexttitle"
        android:id="@+id/alarmView_nextcontent"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/alarmView_nextcontent"
        android:padding="6dp"
        android:id="@+id/alarmnextView_time"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/alarmView_end"
        android:layout_alignParentBottom="true"
        android:text="@string/ok_text"
        android:textSize="24sp"
        android:padding="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/alarm_adView"
        android:layout_above="@id/alarmView_end"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id_alarm" />
</RelativeLayout>